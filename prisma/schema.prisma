generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  username String
  image    String  @default("https://www.datocms-assets.com/120281/1709117782-pngwing-com.png")
  lastName String?
  name     String
  user_id  String  @unique @db.Uuid
}

model BillingAddress {
  id              Int    @id @default(autoincrement())
  preset_name     String
  first_name      String
  last_name       String
  card_number     String
  cvv             String
  expiration_date String
  user_id         String @unique @db.Uuid
}

model ShippingAddress {
  id             Int    @id @default(autoincrement())
  preset_name    String
  first_name     String
  last_name      String
  country        String
  street_address String
  postcode       String
  city           String
  phone          String @unique
  email          String @unique
  user_id        String @unique @db.Uuid
}

model ShoppingCart {
  id           Int    @id @default(autoincrement())
  user_id      String @db.Uuid
  product_name String
  quantity     Int
  price        Int
  total_price  Int
  color        String
  slug         String
  photoUrl     String
}
